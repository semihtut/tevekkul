    "typescript_example": "function recommendEsma(name: string): EsmaRecommendation {\n  const ebcedValue = computeEbced(name);\n  \n  // 1. Check direct match with Asma values\n  const directMatch = asmaList.find(a => a.abjad_value === ebcedValue);\n  if (directMatch) return { primary: directMatch, method: 'direct' };\n  \n  // 2. Check special numbers\n  const specialMatch = specialNumbers[ebcedValue];\n  if (specialMatch) return { primary: specialMatch, method: 'special' };\n  \n  // 3. Apply range matching\n  const range = ranges.find(r => ebcedValue >= r.min && ebcedValue <= r.max);\n  const rangeMatch = range?.primary_esma;\n  \n  // 4. Calculate digit sum\n  let digitSum = ebcedValue;\n  while (digitSum > 9) {\n    digitSum = String(digitSum).split('').reduce((a, b) => a + parseInt(b), 0);\n  }\n  const digitSumMatch = digitSumMeanings[digitSum];\n  \n  return {\n    primary: rangeMatch,\n    secondary: digitSumMatch,\n    ebcedValue,\n    digitSum\n  };\n}"
  }
